{% extends 'base.html.twig' %}

{% block body %}
    <h1>Список лекций</h1>

    <table bordercolor="blue" border="1">
        <thead align="center">
            <tr>
                <th>Id</th>
                <th>Статус</th>
                <th>Дата</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody align="center">
        {% for lecture in lectures %}
            <tr>
                <td><a href="{{ path('lecture_show', { 'id': lecture.id }) }}">{{ lecture.id }}</a></td>
                <td>{{ lecture.status }}</td>
                <td>{% if lecture.date %}{{ lecture.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('lecture_show', { 'id': lecture.id }) }}">Показать</a>
                        </li>
                        <li>
                            <a href="{{ path('lecture_edit', { 'id': lecture.id }) }}">Обновить</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('lecture_new') }}">Создать новую лекцию</a>
        </li>
    </ul>
{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}
    <h1>Лекция</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ lecture.id }}</td>
            </tr>
            <tr>
                <th>Статус</th>
                <td>{{ lecture.status }}</td>
            </tr>
            <tr>
                <th>Дата</th>
                <td>{% if lecture.date %}{{ lecture.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('lecture_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('lecture_edit', { 'id': lecture.id }) }}">Edit</a>
        </li>
        <li>
            <a href="{{ path('lecture_delete', { 'id': lecture.id }) }}">Delete</a>
        </li>
    </ul>
{% endblock %}

{% extends 'base.html.twig' %}

{% block include %}
    {% include '../menu.html.twig' %}
{% endblock %}

{% block body %}
    <h1>Список сотрудников</h1>

    <table bordercolor="blue" border="1">
        <thead align="center">
            <tr>
                <th>Id</th>
                <th>Имя</th>
                <th>Фамилия</th>
                <th>Дисциплина</th>
                <th>Email</th>
                <th>Пароль</th>
                <th>Должность</th>
                <th>Salt</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody align="center">
        {% for employee in employees %}
            <tr>
                <td><a href="{{ path('employee_show', { 'id': employee.id }) }}">{{ employee.id }}</a></td>
                <td>{{ employee.name }}</td>
                <td>{{ employee.surname }}</td>
                <td>{{ employee.position }}</td>
                <td>{{ employee.email }}</td>
                <td>{{ employee.password }}</td>
                <td>{{ employee.role }}</td>
                <td>{{ employee.salt }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('employee_show', { 'id': employee.id }) }}">Показать</a>
                        </li>
                        <li>
                            <a href="{{ path('employee_edit', { 'id': employee.id }) }}">Обновить</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('employee_new') }}">Создать нового сотрудника</a>
        </li>
    </ul>
{% endblock %}

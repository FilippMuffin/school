{% extends 'base.html.twig' %}

{% block body %}
    <h1>Список дисциплин</h1>

    <table bordercolor="blue" border="1">
        <thead align="center">
            <tr>
                <th>Id</th>
                <th>Количество часов</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody align="center">
        {% for subject in subjects %}
            <tr>
                <td><a href="{{ path('subject_show', { 'id': subject.id }) }}">{{ subject.id }}</a></td>
                <td>{{ subject.countHours }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('subject_show', { 'id': subject.id }) }}">Показать</a>
                        </li>
                        <li>
                            <a href="{{ path('subject_edit', { 'id': subject.id }) }}">Обновить</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('subject_new') }}">Создать новую дисциплину</a>
        </li>
    </ul>
{% endblock %}
